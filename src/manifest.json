{
  "manifest_version": 2,
  "name": "Lightning",
  "version": "1.0.0",

  "icons": {
    "16": "assets/icons/satsymbol-black.svg",
    "32": "assets/icons/satsymbol-black.svg",
    "48": "assets/icons/satsymbol-black.svg",
    "128": "assets/icons/satsymbol-black.svg"
  },
  "description": "Lightning up the browser",
  "homepage_url": "https://github.com/bumi/lightning-browser-extension",
  "web_accessible_resources": ["js/inpageScript.bundle.js", "lsat.html"],
  "permissions": [
    "nativeMessaging",
    "notifications",
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "__chrome|firefox__author": "bumi",
  "__opera__developer": {
    "name": "bumi"
  },

  "__firefox__browser_specific_settings": {
    "gecko": {
      "id": "{424FB1AD-CC3B-4856-B6A0-7786F8CA9D17}"
    }
  },

  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/satsymbol-black.svg",
      "32": "assets/icons/satsymbol-black.svg",
      "48": "assets/icons/satsymbol-black.svg",
      "128": "assets/icons/satsymbol-black.svg"
    },
    "default_title": "Lightning",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },

  "background": {
    "scripts": [
      "js/background.bundle.js"
    ],
    "__chrome|opera__persistent": true
  },

  "content_scripts": [{
    "matches": [
      "*://*/*"
    ],
    "js": [
      "js/contentScript.bundle.js"
    ]
  }]
}
